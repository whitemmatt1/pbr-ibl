{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++20",
				"-fcolor-diagnostics",
				"-Wall",
				"-fansi-escape-codes",
				"-g",
				"-I${workspaceFolder}/dependencies/include",
				"-I${workspaceFolder}/dependencies/library",
				"-I${workspaceFolder}/dependencies/glm",
				"-I${workspaceFolder}/dependencies/KHR",
				"-I${workspaceFolder}/dependencies/assimp",
				"-L${workspaceFolder}/dependencies/library",
				"${workspaceFolder}/*.cpp",
				"${workspaceFolder}/glad.c",
				"${workspaceFolder}/dependencies/library/stb_image.cpp",
				"-lglfw.3.4",
				"-lassimp.5.4.3",
				"-o",
				"${workspaceFolder}/opengl",
				"-framework",
				"OpenGL",
				"-framework",
				"Cocoa",
				"-framework",
				"IOKit",
				"-framework",
				"CoreVideo",
				"-framework",
				"CoreFoundation",
				"-Wno-deprecated",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}